---
import "../../styles/global.css";
import { Image } from "astro:assets";
import dev from "../..//images/dev.webp";
import { supabase } from "../../lib/supabaseClient";
import { marked } from "marked";
import NavbarSection from "../../components/NavbarSection.astro";
import Loading from "../../components/Loading.astro";
import CursorTracker from "../../components/CursorTracker.astro";
import FooterSection from "../../components/FooterSection.astro";
import MetaSection from "../../components/MetaSection.astro";
import ViewsCount from "../../components/blog/ViewsCount.jsx";
import LikesCount from "../../components/blog/LikesCount.jsx";
import LikeView from "../../components/blog/LikeView.jsx";
import Button from "../../components/Button.astro";
import { ChevronRight, ChevronLeft } from "@lucide/astro";

// Get all blog posts for navigation
export async function getStaticPaths() {
  const { data: blog } = await supabase.from("blog").select("slug");
  return (blog ?? []).map((blog) => ({
    params: { slug: blog.slug },
  }));
}

const { slug } = Astro.params;
const { data: blog, error } = await supabase
  .from("blog")
  .select("*")
  .eq("slug", slug)
  .single();
if (!blog) throw new Error("blog not found");
const { data: allPosts } = await supabase
  .from("blog")
  .select("*")
  .neq("id", blog.id)
  .limit(10);

const randomPosts = allPosts
  ? allPosts.sort(() => 0.5 - Math.random()).slice(0, 2)
  : [];

const html = marked(blog.content);
---

<!doctype html>
<html lang="en" class="lenis lenis--smooth select-none">
  <MetaSection
    title={`${blog.title} | Ajmal Razaq `}
    description={blog.excerpt || "An article by Ajmal Razaq "}
    keywords={[
      "blog",
      "article",
      "frontend development",
      "UI/UX design",
      "ajmal razaq ",
    ]}
    socialImage={blog.img || "/images/social-share.png"}
    url={`https://theajmalrazaq.github.io/blog/${slug}`}
    type="article"
  />

  <body class="bg-black min-h-screen flex flex-col">
    <!-- Cursor Tracker -->
    <CursorTracker />
    <Loading />
    <NavbarSection page="blog" />

    <main class="flex-grow">
      <!-- Hero Section with Cover Image -->
      <main class="relative">
        {
          blog.img && (
            <div>
              <figure class="overflow-hidden absolute left-0 top-0 z-[-1] h-[11rem] w-full pointer-events-none">
                <div
                  class="img-blur lg:translate-y-[-20%]"
                  style="position: relative; height: 0px; padding-top: 40%;"
                >
                  <div class="absolute inset-0 top-1/2">
                    <img
                      alt={blog.title}
                      title={blog.title}
                      fetchpriority="high"
                      width="1200"
                      height="480"
                      decoding="async"
                      class="w-full -translate-y-1/2"
                      src={blog.img}
                      style="color: transparent"
                    />
                  </div>
                </div>
              </figure>
              <div class="absolute left-0 sm:top-0 -top-10 h-[14rem] sm:h-[11rem]  w-full bg-gradient-to-b from-black/60 to-black z-[-1]" />
            </div>
          )
        }

        <!-- Header Content -->
        <div class="max-w-4xl mx-auto px-4 pb-4 pt-40">
          <div class="pb-4" data-aos="focus-up" data-aos-delay="300">
            <div class="flex flex-wrap gap-x-2 gap-y-1 text-sm">
              {
                blog.tags &&
                  blog.tags
                    .split(",")
                    .map((tag: string) => tag.trim())
                    .map((tag: string) => (
                      <button class="blog-tag cursor-auto inline-block rounded-full px-3 py-2 font-medium bg-accent text-white border border-white/10 disabled:opacity-40">
                        {tag}
                      </button>
                    ))
              }
            </div>
            <h1
              class="gradient-text text-3xl sm:text-4xl md:text-5xl font-nixel tracking-[1px] mt-6 leading-tight lowercase"
              style="word-spacing: -7px;"
              data-aos="focus-up"
              data-aos-delay="400"
            >
              {blog.title}
            </h1>

            {
              blog.excerpt && (
                <p
                  class="text-normal font-product-sans text-white/90 mt-1"
                  data-aos="focus-up"
                  data-aos-delay="500"
                >
                  <span class="text-center transition-colors bg-gradient-to-r from-neutral-300/[35%] via-neutral-300/90 to-neutral-300/[35%] bg-clip-text text-transparent font-product-sans">
                    {blog.excerpt}
                  </span>
                </p>
              )
            }

            <div
              class="mt-8 flex gap-4 items-center justify-between flex-wrap"
              data-aos="focus-up"
              data-aos-delay="600"
            >
              <div class="flex gap-3 items-center">
                <div class="w-10 h-10 rounded-full overflow-hidden">
                  <Image
                    src={dev}
                    alt="Ajmal Razaq"
                    class="w-full h-full object-cover"
                  />
                </div>
                <div class="flex-1">
                  <p class="text-sm font-product-sans text-white">
                    Ajmal Razaq
                  </p>
                  <p class="text-xs font-product-sans text-white/60">
                    {
                      new Date(blog.created_at).toLocaleDateString("en-US", {
                        year: "numeric",
                        month: "long",
                        day: "numeric",
                      })
                    }
                  </p>

                  <!-- Like and Share Buttons -->
                </div>
              </div>

              <div class="flex items-center gap-4 text-xs text-white/60">
                <div class="flex gap-2">
                  <LikeView blogId={blog.id} client:load />
                </div>
                <div class="flex items-center gap-1">
                  ðŸ™„
                  <ViewsCount blogId={blog.id} client:load /> views
                </div>

                <div class="flex items-center gap-1">
                  <span>ðŸ•’</span>
                  <span>{blog.avg_read_time || 5} min read</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Article Content Section -->
        <section class="max-w-4xl mx-auto px-4 pb-20">
          <!-- Main Content Column -->
          <div class="min-w-0">
            <article
              class="mdx prose mt-4 max-w-4xl transition-colors font-product-sans prose-p:text-neutral-500 prose-img:rounded-2xl prose-a:text-accent prose-a:underline prose-a:decoration-accent prose-a:decoration-2 prose-ul:text-neutral-500 prose-ol:text-neutral-500 prose-li:text-neutral-500 prose-headings:font-black prose-a:hover:decoration-4 prose-headings:text-white prose-headings:font-nixel prose-headings:tracking-[1px] prose-headings:leading-tight prose-pre:bg-neutral-900 prose-pre:rounded-lg prose-pre:p-4 prose-pre:font-mono prose-pre:text-sm prose-code:bg-neutral-800 prose-code:text-accent prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:font-mono prose-code:text-sm prose-blockquote:border-l-4 prose-blockquote:border-accent prose-blockquote:pl-4 prose-blockquote:italic prose-blockquote:text-neutral-400 prose-strong:text-white prose-em:text-neutral-300 prose-em:italic prose-hr:border-white/20 prose-table:border-collapse prose-thead:border-b-2 prose-thead:border-white/30 prose-th:text-white prose-th:font-bold prose-th:px-4 prose-th:py-2 prose-td:text-neutral-400 prose-td:px-4 prose-td:py-2 prose-td:border-b prose-td:border-white/10 prose-headings:lowercase"
              data-aos="focus-up"
              data-aos-delay="500"
              set:html={html}
            />
          </div>
        </section>

        <!-- Navigation Buttons Section -->
        <section class="max-w-4xl mx-auto px-4 pb-12">
          <div
            class="flex justify-between items-center gap-4 border-t border-white/10 pt-8"
          >
            <a href="/blog" class="block w-full">
              <Button
                text="back to all blogs"
                data_aos="focus-up"
                data_aos_delay="200"
                aria_label="Back to Blog Page"
                class="w-full"
              >
                <ChevronLeft
                  class="w-5 h-5 transition-transform duration-300"
                />
              </Button>
            </a>
          </div>
        </section>

        <!-- You Might Like Section -->
        {
          randomPosts.length > 0 && (
            <section class="max-w-4xl mx-auto px-4 mt-16">
              <div class="border-t border-white/10 pt-12">
                <h2
                  class="text-2xl sm:text-3xl font-nixel tracking-[1px] text-white mb-8 text-center"
                  style="word-spacing: -7px;"
                  data-aos="focus-up"
                >
                  you might also <span class="text-accent">like</span>
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  {randomPosts.map((post, index) => (
                    <a
                      href={`/blog/${post.slug}`}
                      class="blog-card group rounded-3xl border border-white/10 overflow-hidden flex flex-col h-full transition-all duration-300 ease-in-out hover:scale-[1.02] shadow-accent-soft"
                      data-aos="focus-up"
                      data-aos-delay={index * 100}
                    >
                      <div class="p-5">
                        {post.img && (
                          <img
                            src={post.img}
                            alt={post.title}
                            class="w-full aspect-video transition-transform duration-500 rounded-2xl mb-4 group-hover:scale-105"
                          />
                        )}

                        <div class="flex flex-col justify-between h-full">
                          <div>
                            <div class="flex justify-between items-center text-xs text-white/60 mb-2">
                              <span>
                                {new Date(post.created_at).toLocaleDateString(
                                  "en-US",
                                  {
                                    month: "long",
                                    day: "2-digit",
                                    year: "numeric",
                                  }
                                )}
                              </span>
                            </div>

                            <h3
                              class="text-xl font-nixel tracking-[1px] text-white mb-2 group-hover:text-accent line-clamp-2"
                              style="word-spacing: -7px;"
                            >
                              {post.title}
                            </h3>

                            <p class="text-sm text-white/80 mb-4 line-clamp-3">
                              {post.excerpt}
                            </p>
                          </div>

                          <div class="flex justify-between items-center pt-4 text-xs text-white/60 border-t border-white/10">
                            <div class="flex items-center gap-4">
                              <div class="flex items-center gap-1">
                                ðŸ™„
                                <ViewsCount blogId={post.id} client:load />
                              </div>
                              <div class="flex items-center gap-1">
                                ðŸŒ€
                                <LikesCount blogId={post.id} client:load /> Aura
                              </div>
                              <span>{post.avg_read_time || 5} min read</span>
                            </div>
                          </div>
                        </div>
                      </div>
                    </a>
                  ))}
                </div>
              </div>
            </section>
          )
        }
      </main>
      <!-- New Footer Component -->
      <FooterSection />
      <script type="module" src="/script.js"></script>
    </main>
  </body>
</html>
