---
import "../styles/global.css";
import  {Rocket,MessageCircle,Folder, ChevronRight,Github} from "@lucide/astro";
import  Button from "../components/button.astro";
import { Seo } from "astro-seo-meta"
import Projects from "../components/Projects.astro";
import { createClient } from "@supabase/supabase-js";
import projectsicons from '../../public/images/projectsicons.svg';
import devimg from '../../public/images/dev.webp';
import buildimg from '../../public/images/build.svg';
import eclipseimg from '../../public/images/eclipse.svg';
import Navbar from '../components/navbar.astro';
import Loading from '../components/loading.astro';
import StarBorder from "../components/StarBorder.jsx";
import Navmobile from "../components/navmobile.astro";
const supabase = createClient(import.meta.env.PUBLIC_SUPABASE_URL, import.meta.env.PUBLIC_SUPABASE_ANON_KEY);

const { data: projects, error } = await supabase.from("selected_projects").select("*");
---


<!DOCTYPE html>
<html lang="en" class="lenis lenis--smooth select-none">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <Seo
  title="Ajmal Razaq Bhatti"
  description="An online portfolio and blog by Ajmal Razaq Bhatti. Showcasing my projects, and sharing thoughts on frontend development and UI/UX design."
  keywords={["website", "blog", "portfolio", "frontend developer", "junior product designer", "ajmal razaq bhatti", "ajmalrazaq", "theajmalrazaq", "theajmalrazaq.github.io"]}
  icon="favicon/favicon.ico"
  themeColor="#000000"
  colorScheme="dark"
  robots="index, follow"
  facebook={{
    image: "/images/social-share.png",
    url: "https://theajmalrazaq.github.io",
    type: "website",
  }}
  twitter={{
    image: "/images/social-share.png",
    site: "@theajmalrazaq",
    card: "summary_large_image",
  }}
/><script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Ajmal Razaq Bhatti",
  "url": "https://theajmalrazaq.tech",
  "sameAs": [
    "https://github.com/theajmalrazaq",
    "https://linkedin.com/in/theajmalrazaq"
  ],
  "jobTitle": "Frontend Developer & Junior Product Designer",
  "worksFor": {
    "@type": "Organization",
    "name": "Freelance"
  }
}
</script>
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
  </head>
  <body class="bg-black">
    <!-- Loading overlay -->
    <div id="loading-overlay" class="fixed top-0 left-0 w-full h-full flex items-center justify-center z-[9999] bg-black">
      <Loading />
    </div>
    
    <!-- Lottie Background Animation -->

    <header class="h-lvh w-full flex justify-center relative z-99">
      <div class="absolute top-0 w-full h-4/5 bg-[radial-gradient(circle_at_center,rgba(160,152,255,0.10)_0%,rgba(0,0,0,0)_30%)] backdrop-blur-[80px] -z-10 pointer-events-none" aria-hidden="true"></div>
      <lottie-player
        src="images/up.json"
        background="transparent"
        class="absolute right-0 -top-25 h-1/2 sm:top-10 w-64 sm:w-auto z-10"
        speed="0.3"
        loop
        autoplay
        data-aos="fade-down"
        data-aos-duration="1000"
        aria-hidden="true"
      >
      </lottie-player>
      <lottie-player
        src="images/down.json"
        background="transparent"
        class="absolute left-0 -top-25 sm:top-10 h-1/2 w-64 sm:w-auto z-10"
        speed="0.3"
        loop
        autoplay
        data-aos="fade-down"
        data-aos-duration="1000"
        aria-hidden="true"
      >
      </lottie-player>

      <Navmobile />
 

      <div class="flex flex-col items-center w-full relative z-10">
        <div
          class="sm:mt-2 mt-22 flex items-center justify-center rounded-full py-[6px] px-[6px] text-center bg-gradient-to-b from-transparent via-accent/20 to-transparent  backdrop-blur-3xl bg-accent-light text-white/90 transition-all duration-300 ease-in-out cursor-pointer"
          data-aos="fade-down"
          data-aos-delay="200"
          data-aos-duration="800"
          role="status"
          aria-live="polite"
        >
           <div class="p-3 border border-white/10 flex items-center justify-center rounded-full py-2 px-3 text-center backdrop-blur-md  bg-accent-light bg-black text-white/90 transition-all duration-300 ease-in-out cursor-pointer">
          <div
            class="relative mr-2.5 flex h-3.5 w-3.5 items-center justify-center"
            aria-hidden="true"
          >
            <div class="h-2.5 w-2.5 rounded-full bg-accent glow-sm"></div>
            <div
              class="absolute h-full w-full animate-ping rounded-full bg-accent opacity-60"
            ></div>
          </div>
          <p class="sm:text-sm text-xs">Available For New Opportunities</p>
        </div>
        </div>
        <div
          class="flex flex-col gap-2 items-center justify-center mt-4 w-full"
          data-aos="zoom-in"
          data-aos-delay="400"
        >
          <div class="relative flex items-center justify-center">
            <img
              src={devimg.src}
              alt="Developer illustration representing Ajmal Razaq Bhatti"
              class="logobig w-[180px] h-[180px] hover:scale-105 transition-all duration-300 ease-in-out cursor-pointer hover:animate-pulse"
              data-aos="zoom-in"
              data-aos-duration="1200"
              data-speed="0.5"
              fetchpriority="high"
              aria-hidden="true"
            />
            <div
              class="w-fit bg-black/50 border text-accent sm:px-4 px-2 py-2 border-white/10 rounded-xl absolute top-5 sm:-left-25 -left-20 backdrop-blur-2xl animate-float hover:scale-105 transition-all duration-300 ease-in-out  cursor-pointer sm:text-base text-sm"
              data-aos="fade-right"
              data-aos-delay="600"
              data-aos-duration="800"
              aria-label="Skill: Frontend Development"
            >
              Frontend Dev
            </div>
            <div
              class="w-fit bg-black/50 border text-accent sm:px-4 px-2 py-2 border-white/10 rounded-xl absolute top-30 sm:-right-30 -right-20 backdrop-blur-2xl animate-float hover:scale-105 transition-all duration-300 ease-in-out cursor-pointer sm:text-base text-sm"
              data-aos="fade-left"
              data-aos-delay="800"
              data-aos-duration="800"
              aria-label="Skill: Junior Product Design"
            >
              Jr. Product Designer
            </div>
          </div>
          <h1
            class="sm:text-5xl text-4xl p-2 text-transparent font-recoleta devname bg-clip-text"
            data-aos="zoom-in"
            data-aos-delay="300"
            data-aos-duration="1000"
            style="
              background-image: linear-gradient(
                0deg,
                rgb(198, 200, 255) 50%,
                #a098ff 100%
              );
            "
          >
            Ajmal Razaq Bhatti
          </h1>
        </div>
        <div
          class="flex flex-col gap-5 items-center justify-center mt-2"
          data-aos="zoom-in"
          data-aos-delay="500"
        >
          <div
            class="flex items-center justify-center gap-2 mt-2 text-accent"
            data-aos="zoom-in"
            data-aos-delay="700"
            role="navigation"
            aria-label="Social media links"
          >
            <a
              href="https://github.com/theajmalrazaq"
              target="_blank"
              rel="noopener noreferrer"
              class="text-white/70 hover:color-accentflex items-center gap-1 bg-white/5 px-2 py-1 rounded-full border border-white/10 glow-s hover:shadow-lg hover:bg-accent transition-all duration-400"
              data-aos="flip-up"
              data-aos-delay="800"
              data-aos-duration="600"
              aria-label="GitHub profile"
            >
              <span>GitHub</span>
            </a>
            /
            <a
              href="https://linkedin.com/in/theajmalrazaq"
              target="_blank"
              rel="noopener noreferrer"
              class="text-white/70 hover:color-accentflex items-center gap-1 bg-white/5 px-2 py-1 rounded-full border border-white/10 glow-s hover:shadow-lg hover:bg-accent transition-all duration-400"
              data-aos="flip-up"
              data-aos-delay="900"
              data-aos-duration="600"
              aria-label="LinkedIn profile"
            >
              <span>LinkedIn</span>
            </a>
            /
            <a
              href="https://x.com/theajmalrazaq"
              target="_blank"
              rel="noopener noreferrer"
              class="text-white/70 hover:color-accentflex items-center gap-1 bg-white/5 px-2 py-1 rounded-full border border-white/10 glow-s hover:shadow-lg hover:bg-accent transition-all duration-400"
              data-aos="flip-up"
              data-aos-delay="1000"
              data-aos-duration="600"
              aria-label="X (Twitter) profile"
            >
              <span>X</span>
            </a>
            /
            <a
              href="https://behance.net/theajmalrazaq"
              target="_blank"
              rel="noopener noreferrer"
              class="text-white/70 hover:color-accentflex items-center gap-1 bg-white/5 px-2 py-1 rounded-full border border-white/10 glow-s hover:shadow-lg hover:bg-accent transition-all duration-400"
              data-aos="flip-up"
              data-aos-delay="1100"
              data-aos-duration="600"
              aria-label="Behance portfolio"
            >
              <span>Behance</span>
            </a>
          </div>
          <p
            class="font-product-sans text-sm text-center sm:w-3/4 text-white/90"
            data-aos="zoom-in"
            data-aos-delay="1200"
          >
            Designer? Developer? Why not both. I take ideas from "meh" to "whoa"
            designing sleek interfaces and coding fast, responsive websites that
            actually convert.
          </p>
          <div class="flex items-center justify-center gap-2 mt-4 relative group">
             <StarBorder
              as="button"
              className="group/button"
              color="#a098ff"
              speed="3s"
            >
          <div class="flex items-center gap-2 cursor-pointer">
  <div
    class="bg-gradient-to-r to-black/0 p-3 text-white shadow-accent rounded-full flex items-center justify-center opacity-0 scale-0 group-hover/button:opacity-100 group-hover/button:scale-100 transition-all duration-300 ease-in-out absolute left-1"
    aria-hidden="true"
  >
    <MessageCircle size="18" />
  </div>
  <span class="group-hover/button:ml-12 group-hover/button:pl-1 group-hover/button:px-4 group-hover/button:py-3 px-7 py-3 transition-all duration-300 ease-in-out">Let's Talk</span>
            </div>
            </StarBorder>
            </div> 
       
        </div>
      </div>
    </header>
    <div class="w-full relative mt-8 sm:mt-14">
      <img
        src={eclipseimg.src}
        alt="Decorative eclipse background"
        class="absolute sm:-top-50 -top-40 w-full -z-10"
        aria-hidden="true"
      />
      <div
        class="flex items-center justify-center w-full flex-col gap-3 sm:gap-5 px-4 sm:px-0"
      >
        <div class="relative w-full flex items-center justify-center">
          <img
            src={buildimg.src}
            alt="Decorative build illustration"
            class="absolute w-3/5 sm:w-auto"
            data-rotate
            data-speed="0.3"
            data-aos="zoom-in"
            aria-hidden="true"
          />
          <h1
            class="text-white text-2xl sm:text-4xl md:text-5xl -top-2 z-10 absolute font-recoleta text-center"
            data-aos="zoom-in"
          >
            Let's <span class="text-accent">build </span> something together.
          </h1>
        </div>
        <div
          class="sm:mt-6 mt-4 z-10 flex flex-col items-center justify-center gap-4 w-full"
        >
          <p
            class="font-product-sans text-sm text-center text-white/90"
            data-aos="zoom-in"
          >
            My focus lies in
            <span class="text-accent"
              >UI/UX Design, branding, and web development</span
            >
            <br class="hidden sm:block" />
            No matter the industry, I'd love to talk with you and see how we
            could create <br class="hidden sm:block" />
            something wonderful.
          </p>
         <Button 
            text="Let's Build Together"
            data_aos="zoom-in"
            data_aos_delay="200"
            aria_label="Contact me to discuss a project"
          >
            <Rocket size="18" class="text-accent" />
          </Button>
        </div>
      </div>
    </div>
    <div class="w-full flex items-center justify-center mt-10">
      <div
        class="w-[70%] h-[1px] bg-gradient-to-l from-transparent via-[#a098ff]/40 to-transparent z-99"
        aria-hidden="true"
      ></div>
    </div>
    <!-- Projects Section  -->
    <div
      class="relative mt-40 w-full flex flex-col items-center justify-center gap-5"
      id="projects"
      role="region"
      aria-labelledby="projects-heading"
    >
      <img
        src={projectsicons.src}
        alt="Projects section decorative illustration"
        class="sm:w-1/2 absolute -top-30 animate-float duration-1000 ease-in-out"
        id="projecticons"
        data-aos="fade-down"
        aria-hidden="true"
      />
      <div
        class="relative z-10 w-fit p-4 rounded-4xl flex items-center justify-center shadow-accent hover:scale-105 transition-all duration-300 ease-in-out cursor-pointer"
        aria-hidden="true"
      >
       <Folder size="64" class="text-accent" />
      </div>

      <div
        class="relative flex flex-col items-center justify-center gap-3 w-full"
      >
        <h1
          class="text-white text-2xl sm:text-4xl md:text-5xl font-recoleta text-center"
          data-aos="zoom-in"
          id="projects-heading"
        >
          <span class="text-accent">Projects</span> that I've worked on.
        </h1>
        <p
          class="font-product-sans text-sm text-center text-white/90"
          data-aos="zoom-in"
        >
          Here's a collection of work where I turned pain points into purposeful
          products through <br />
          <span class="text-accent"
            >careful research, intuitive design, and scalable development.</span
          >
        </p>
      </div>

<Projects projects={projects} />
       
    </div>
    <footer class="flex justify-center" role="contentinfo">
      <Navbar page="index" />
    </footer>
    <script type="module" src="/script.js"></script>
  </body>
</html>