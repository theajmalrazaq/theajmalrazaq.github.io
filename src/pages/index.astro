---
import "../styles/global.css";
import  {Rocket,MessageCircle,ChevronRight,} from "@lucide/astro";
import  Button from "../components/button.astro";
import { Seo } from "astro-seo-meta"
import Projects from '../components/Projects.astro'; 
import devimg from '../../public/images/dev.webp';
import buildimg from '../../public/images/build.svg';
import eclipseimg from '../../public/images/eclipse.svg';
import Navbar from '../components/navbar.astro';
import Loading from '../components/loading.astro';
import StarBorder from "../components/StarBorder.jsx";
import logowhite from '../../public/images/logowhite.svg';
import Navmobile from "../components/navmobile.astro";
import Highlights from '../components/highlights.astro';
import arrow_right from '../../public/images/arrow_right.svg';
import star from '../../public/images/star.svg';
import name from '../../public/images/name.svg';
import halfpixel from '../../public/images/halfpixel.svg';
---


<!DOCTYPE html>
<html lang="en" class="lenis lenis--smooth select-none cursor-none">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <Seo
  title="Ajmal Razaq Bhatti"
  description="An online portfolio and blog by Ajmal Razaq Bhatti. Showcasing my projects, and sharing thoughts on frontend development and UI/UX design."
  keywords={["website", "blog", "portfolio", "frontend developer", "junior product designer", "ajmal razaq bhatti", "ajmalrazaq", "theajmalrazaq", "theajmalrazaq.github.io"]}
  icon="favicon/favicon.ico"
  themeColor="#000000"
  colorScheme="dark"
  robots="index, follow"
  facebook={{
    image: "/images/social-share.png",
    url: "https://theajmalrazaq.github.io",
    type: "website",
  }}
  twitter={{
    image: "/images/social-share.png",
    site: "@theajmalrazaq",
    card: "summary_large_image",
  }}
/><script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Ajmal Razaq Bhatti",
  "url": "https://theajmalrazaq.tech",
  "sameAs": [
    "https://github.com/theajmalrazaq",
    "https://linkedin.com/in/theajmalrazaq"
  ],
  "jobTitle": "Frontend Developer & Junior Product Designer",
  "worksFor": {
    "@type": "Organization",
    "name": "Freelance"
  }
}
</script>
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
    <script src="https://unpkg.com/@lottiefiles/lottie-interactivity@latest/dist/lottie-interactivity.min.js"></script>
  </head>
  <body class="bg-black">
    <!-- Cursor Tracker -->
    <div id="cursor-tracker" class="fixed w-4 h-4 rounded-full pointer-events-none z-[9999] flex items-center bg-accent justify-center" style="transform: translate(-50%, -50%)">
      <div class="w-1.5 h-1.5 rounded-full bg-white mix-blend-difference"></div>
    </div>
    
    <!-- Loading overlay -->
    <div id="loading-overlay" class="fixed top-0 left-0 w-full h-full flex items-center justify-center z-[9999] bg-black">
      <Loading />
    </div>
    
    <!-- Lottie Background Animation -->
     <div class="flex items-center justify-center z-[999]">
      <Navmobile />
    </div>
    
    
    <header class="relative h-lvh w-full flex justify-center overflow-hidden z-99" data-aos="text-focus-fade-up">
      <lottie-player
        src="images/up.json"
        background="transparent"
        class="absolute right-0 -top-25 h-1/2 sm:top-10 w-64 sm:w-auto z-10"
        speed="0.3"
        loop
        autoplay
        data-aos="text-focus-fade-up"
        data-aos-delay="300"
        data-aos-duration="1000"
        aria-hidden="true"
      >
      </lottie-player>
      <lottie-player
        src="images/down.json"
        background="transparent"
        class="absolute left-0 -top-25 sm:top-10 h-1/2 w-64 sm:w-auto z-10"
        speed="0.3"
        loop
        autoplay
        data-aos="text-focus-fade-up"
        data-aos-delay="300"
        data-aos-duration="1000"
        aria-hidden="true"
      >
      </lottie-player>

      <!-- Background Pattern -->
    <div class="absolute w-full h-full animate-pulse -top-10 inset-0 pointer-events-none" aria-hidden="true">
      <img 
        decoding="async" 
        loading="lazy" 
        width="1920" 
        height="1330"
        sizes="100vw" 
        srcset="https://framerusercontent.com/images/2ZTM81mdCXeMIbSWfvdh4X7JIGg.png?scale-down-to=512 512w,
                https://framerusercontent.com/images/2ZTM81mdCXeMIbSWfvdh4X7JIGg.png?scale-down-to=1024 1024w,
                https://framerusercontent.com/images/2ZTM81mdCXeMIbSWfvdh4X7JIGg.png 1920w"
        src="https://framerusercontent.com/images/2ZTM81mdCXeMIbSWfvdh4X7JIGg.png" 
        alt="Background pattern"
        class="w-full h-full object-cover object-center opacity-50 animate-pulse"
      />
    </div>
 

      <div class="flex flex-col items-center w-full relative z-10">
        <div
          class="sm:mt-2 mt-22 flex items-center justify-center rounded-full py-[6px] px-[6px] text-center bg-gradient-to-b from-transparent via-accent/20 to-transparent  backdrop-blur-3xl bg-accent-light text-white/90 transition-all duration-300 ease-in-out cursor-none"
          data-aos="text-focus-fade-up"
          data-aos-delay="200"
          data-aos-duration="800"
          role="status"
          aria-live="polite"
        >
           <div class="p-3 border border-white/10 flex items-center justify-center rounded-full py-2 px-3 text-center backdrop-blur-md  bg-accent-light bg-black text-white transition-all duration-300 ease-in-out cursor-none">
          <div
            class="relative mr-2.5 flex h-3.5 w-3.5 items-center justify-center"
            aria-hidden="true"
          >
            <div class="h-2.5 w-2.5 rounded-full bg-lime-500 glow-sm"></div>
            <div
              class="absolute h-full w-full animate-ping rounded-full bg-lime-500 opacity-60"
            ></div>
          </div>
          <p class="sm:text-sm text-xs">Avaliable for New Opportunities</p>
        </div>
        </div>
        <div
          class="flex flex-col gap-2 items-center justify-center mt-4 w-full"
          data-aos="text-focus-fade-up"
          data-aos-delay="400"
        >
          <div class="relative flex items-center justify-center">


      <div class="group cursor-none relative w-[180px] h-[180px]">

  <!-- Front Image -->
  <img
    src={devimg.src}
    alt="Developer Front"
    class="absolute w-full h-full transition-all duration-700 ease-in-out z-20 opacity-100 
           group-hover:z-10 group-hover:opacity-0 group-hover:translate-x-5 group-hover:rotate-[15deg]"
  />

  <!-- Back Image -->
  <img
    src={logowhite.src}
    alt="Developer Back"
    class="absolute w-full h-full transition-all duration-700 ease-in-out z-10 opacity-0 
           translate-x-5 rotate-[15deg]
           group-hover:z-20 group-hover:opacity-100 group-hover:translate-x-0 group-hover:rotate-0"
  />

</div>



            <div
              class="w-fit bg-black/60 border text-accent sm:px-4 px-2 py-2 border-white/10 rounded-xl absolute top-5 sm:-left-25 -left-20 backdrop-blur-2xl animate-float hover:scale-105 transition-all duration-300 flex justify-center items-center ease-in-out  z-20 cursor-none sm:text-base text-sm"
              data-aos="fade-right"
              data-aos-delay="600"
              data-aos-duration="800"
              aria-label="Skill: Frontend Development"
            >
              <img src={star.src} alt="Star icon" class="w-4 mr-1 animate-pulse" />
              Frontend Dev
            </div>
            <div
              class="w-fit bg-black/60 border text-accent sm:px-4 px-2 py-2 border-white/10 rounded-xl absolute top-30 sm:-right-30 -right-20 backdrop-blur-2xl animate-float hover:scale-105 transition-all duration-300 z-20 flex justify-center items-center ease-in-out cursor-none sm:text-base text-sm"
              data-aos="fade-left"
              data-aos-delay="800"
              data-aos-duration="800"
              aria-label="Skill: Junior Product Design"
            >
              <img src={star.src} alt="Star icon" class="w-4 mr-1 animate-pulse" />
              Jr. Product Designer
            </div>
          </div>
        <img src={name.src} alt="Name" class="p-2" />
        </div>
        <div
          class="flex flex-col gap-5 items-center"
          data-aos="text-focus-fade-up"
          data-aos-delay="500"
        >
          <div
            class="flex items-center justify-center gap-2 mt-2 bg-black backdrop-blur-lg p-2 rounded-full text-accent border border-white/10"
            data-aos="text-focus-fade-up"
            data-aos-delay="700"
            role="navigation"
            aria-label="Social media links"
          >
            <a
              href="https://github.com/theajmalrazaq"
              target="_blank"
              rel="noopener noreferrer"
              class="text-white/70 hover:color-accentflex items-center gap-1 bg-white/5 backdrop-blur-md px-2 py-1 rounded-full  glow-s hover:shadow-lg hover:bg-accent transition-all duration-400 cursor-none"
              data-aos="flip-up"
              data-aos-delay="800"
              data-aos-duration="600"
              aria-label="GitHub profile"
            >
              <span>GitHub</span>
            </a>
            /
            <a
              href="https://linkedin.com/in/theajmalrazaq"
              target="_blank"
              rel="noopener noreferrer"
              class="text-white/70 hover:color-accentflex items-center gap-1 bg-white/5 px-2 py-1 backdrop-blur-md rounded-full  glow-s hover:shadow-lg hover:bg-accent transition-all duration-400 cursor-none"
              data-aos="flip-up"
              data-aos-delay="900"
              data-aos-duration="600"
              aria-label="LinkedIn profile"
            >
              <span>LinkedIn</span>
            </a>
            /
            <a
              href="https://x.com/theajmalrazaq"
              target="_blank"
              rel="noopener noreferrer"
              class="text-white/70 hover:color-accentflex items-center gap-1 bg-white/5 px-2 py-1 backdrop-blur-md rounded-full glow-s hover:shadow-lg hover:bg-accent transition-all duration-400 cursor-none"
              data-aos="flip-up"
              data-aos-delay="1000"
              data-aos-duration="600"
              aria-label="X (Twitter) profile"
            >
              <span>X</span>
            </a>
            /
            <a
              href="https://behance.net/theajmalrazaq"
              target="_blank"
              rel="noopener noreferrer"
              class="text-white/70 hover:color-accentflex items-center gap-1 bg-white/5 px-2 py-1 backdrop-blur-md rounded-full  glow-s hover:shadow-lg hover:bg-accent transition-all duration-400 cursor-none"
              data-aos="flip-up"
              data-aos-delay="1100"
              data-aos-duration="600"
              aria-label="Behance portfolio"
            >
              <span>Behance</span>
            </a>
          </div>
          <p
            class="font-product-sans text-sm text-center  text-white/90"
            data-aos="text-focus-fade-up"
            data-aos-delay="1200"
          >
           Most designers avoid logic. Most devs avoid emotion. I bring both to life.
           <br>
          </p>

          <div class="flex items-center justify-center gap-2 relative group" data-aos="text-focus-fade-up" data-aos-delay="1400">
             <StarBorder
              as="button"
              className="group/button"
              color="#a098ff"
              speed="3s"
            >
          <div class="flex items-center gap-2 cursor-none">
 
  <a href="javascript:void(0);" class="pixel-button relative h-[50px] w-[160px] text-white gap-2 margin-[20px] pl-1 flex justify-center items-center rounded-full font-nixel leading-loose text-xl tracking-[1px] cursor-none">let's chat
                  <img src={arrow_right.src} alt="" class="w-4">
                </a>
            </div>
            
            </div> 
       
        </div>
      </div>
    </header>
    <div class="w-full relative mt-8 sm:mt-14">
      <img
        src={eclipseimg.src}
        alt="Decorative eclipse background"
        class="absolute sm:-top-50 -top-40 w-full -z-10"
        aria-hidden="true"
        data-aos="text-focus-fade-up"
      />
      <div
        class="flex items-center justify-center w-full flex-col gap-3 sm:gap-5 px-4 sm:px-0"
      >
        <div class="relative w-full flex items-center justify-center">
          <img
            src={buildimg.src}
            alt="Decorative build illustration"
            class="absolute w-3/5 sm:w-auto"
            data-rotate
            data-speed="0.3"
            data-aos="text-focus-fade-up"
            data-aos-delay="100"
            data-aos-duration="800"
            aria-hidden="true"
          />
      <h1
  class="text-white text-2xl sm:text-4xl md:text-5xl -top-2 z-10 absolute font-nixel tracking-[1px] text-center flex gap-2 flex-wrap justify-center"
  data-aos="text-focus-fade-up"
  data-aos-delay="200"
  data-aos-duration="800"
>
  <div>who</div>
  <div>am</div>
  <div class="text-accent">i</div>
  <div>and</div>
  <div>what</div>
  <div class="text-accent">do</div>
  <div>i</div>
  <div>create</div>
</h1>

        </div>
        <div
          class="sm:mt-6 mt-4 z-10 flex flex-col items-center justify-center gap-4 w-full"
        >
          <p
            class="font-product-sans text-sm text-center text-white/90 max-w-prose mx-auto leading-relaxed w-full sm:w-4/5 md:w-3/4 lg:w-2/3"
            data-aos="text-focus-fade-up"
            data-aos-delay="300"
            data-aos-duration="800"
          >
            I'm Ajmal Razaq — a design-focused frontend developer based in <span class="font-semibold">Pakistan.</span><br><br>
            
            <span class="font-semibold text-accent">What do I actually do?</span><br>
            I take clunky web experiences and reimagine them into fast, accessible, intuitive products. 
            Not just sleek UIs — real UX that scales and performs.<br><br>
            
          </p>
         <Button 
            text="let's build"
            data_aos="text-focus-fade-up"
            data_aos_delay="400"
            aria_label="Contact me to discuss a project"
          >
            <Rocket size="18" class="text-accent" />
          </Button>
        </div>
      </div>
    </div>
    <div class="w-full flex items-center justify-center mt-10">
      <!-- <div
        class="w-[70%] h-[1px] bg-gradient-to-l from-transparent via-[#a098ff]/40 to-transparent z-99"
        aria-hidden="true"
        data-aos="fade-up"
        data-aos-delay="200"
        data-aos-duration="800"
      ></div> -->
    </div>

    <!-- Highlight Bento: What I Can Do -->
    <div class="relative  w-full sm:px-15 px-6 overflow-hidden flex justify-center items-center" id="about-me">
    <Highlights />
    </div>


    

    
    <div
      class="relative mt-25 w-full flex flex-col items-center justify-center gap-5"
      id="projects"
      role="region"
      aria-labelledby="projects-heading"
    >
      <!-- <div class="absolute -top-25  w-full h-full object-cover object-center overflow-hidden">
        <img 
          src={halfpixel.src}
          decoding="async" 
          loading="lazy"
          alt="Background pattern"
        />
      </div> -->
      
      <img src="images/Projects.svg" alt="Projects section decorative illustration" class="absolute sm:w-1/3 w-67 sm:-top-15 -top-7 duration-1000 ease-in-out" id="projecticons" data-aos="text-focus-fade-up" data-aos-delay="100" data-aos-duration="800" aria-hidden="true" />

      <div
        class="relative flex flex-col items-center justify-center gap-3 w-full"
      >
        <h1
          class="text-white text-2xl sm:text-4xl md:text-5xl font-nixel trackig-[1px] flex gap-2 text-center"
          data-aos="text-focus-fade-up"
          data-aos-delay="200"
          data-aos-duration="800"
          id="projects-heading"
        >
        
  <div>projects</div>
  <div>that</div>
  <div class="text-accent">i</div>
  <div>have</div>
  <div>worked</div>
  <div class="text-accent">on</div>
</h1>
       
         
        <p
          class="font-product-sans text-sm text-center text-white/90"
          data-aos="text-focus-fade-up"
          data-aos-delay="300"
          data-aos-duration="800"
        >
          Here's a collection of work where I turned pain points into purposeful
          products through <br />
          <span class="text-accent"
            >careful research, intuitive design, and scalable development.</span
          >
        </p>
       
      </div>
      <lottie-player
        src="images/click.json"
        background="transparent"
        id="firstLottie"
        class="sm:top-10 h-1/2 w-[90%] sm:w-1/2 z-10"
        data-aos="text-focus-fade-up"
        data-aos-delay="400"
        data-aos-duration="800"
      >
      </lottie-player>

<Projects>
  <ChevronRight size="18" class="text-accent" />
</Projects>
<Button
  text="View All Projects"
  href="/projects"
  data_aos="text-focus-fade-up"
  data_aos_delay="500"
  aria_label="View all projects"
>
  <ChevronRight size="18" class="text-accent" />
</Button>
    </div>
    <div>

    </div>
    <footer class="flex justify-center" role="contentinfo">
      <Navbar page="index" data_aos="text-focus-fade-up" data_aos_delay="600" />
    </footer>
    <script type="module" src="/script.js"></script>
  </body>
</html>