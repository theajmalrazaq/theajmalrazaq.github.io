---
import "../styles/global.css";
import  {Rocket,MessageCircle,Folder} from "@lucide/astro";
---


<!DOCTYPE html>
<html lang="en" class="lenis lenis--smooth select-none">
  <head>
    <meta charset="UTF-8" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/assets/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/assets/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/assets/favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="/assets/favicon/site.webmanifest" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css"
/>
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
    <title>Ajmal Razaq Bhatti</title>
  </head>
  <body class="bg-black">
    <!-- Lottie Background Animation -->

    <header class="h-lvh w-full flex justify-center relative z-99">
      <lottie-player
        src="images/up.json"
        background="transparent"
        class="absolute right-0 -top-25 h-1/2 sm:top-10 w-64 sm:w-auto z-10"
        speed="0.3"
        loop
        autoplay
        data-aos="fade-down"
        data-aos-duration="1000"
      >
      </lottie-player>
      <lottie-player
        src="images/down.json"
        background="transparent"
        class="absolute left-0 -top-25 sm:top-10 h-1/2 w-64 sm:w-auto z-10"
        speed="0.3"
        loop
        autoplay
        data-aos="fade-down"
        data-aos-duration="1000"
      >
      </lottie-player>

      <nav
        class="bg-white/5 text-white rounded-2xl px-7 sm:py-1 py-4 mt-5 backdrop-blur-lg w-11/12 gap-2 fixed justify-between items-center z-99 text-normal top-0 sm:hidden flex"
        data-aos="fade-down"
        data-aos-duration="800"
      >
        <div>
          <a href="/" class="logo">
            <img
              src="/images/logo.svg"
              alt="Ajmal Razaq Bhatti Logo"
              class="logo-image w-10"
              data-rotate
              data-speed="0.2"
            />
          </a>
        </div>

        <div class="sm:hidden flex justify-center items-center">
          <ul class="flex gap-1 sm:gap-3 bg-black/10 p-1 sm:p-2 rounded-full">
            <li>
              <a
                href="https://example.com/page1"
                class="bg-white/5 flex justify-center items-center px-2 py-1 rounded-full hover:bg-white/20 transition-colors"
                >Menu</a
              >
            </li>
          </ul>
        </div>
      </nav>

      <div class="flex flex-col items-center w-full relative z-10">
        <div
          class="sm:mt-4 mt-27 flex items-center justify-center rounded-full py-2 px-3 text-center backdrop-blur-md border border-white/10 glow-sm bg-accent-light text-white/90 transition-all duration-300 ease-in-out cursor-pointer"
          data-aos="fade-down"
          data-aos-delay="200"
          data-aos-duration="800"
        >
          <div
            class="relative mr-2.5 flex h-3.5 w-3.5 items-center justify-center"
          >
            <div class="h-2.5 w-2.5 rounded-full bg-purple-400 glow-sm"></div>
            <div
              class="absolute h-full w-full animate-ping rounded-full bg-purple-400 opacity-60"
            ></div>
          </div>
          <p class="sm:text-sm text-xs">Available For New Opportunities</p>
        </div>
        <div
          class="flex flex-col gap-2 items-center justify-center mt-4 w-full"
          data-aos="fade-up"
          data-aos-delay="400"
        >
          <div class="relative flex items-center justify-center">
            <img
              src="/images/dev.png"
              alt=""
              class="logobig max-w-45 hover:scale-105 transition-all duration-300 ease-in-out cursor-pointer hover:animate-pulse"
              data-aos="zoom-in"
              data-aos-duration="1200"
              data-speed="0.5"
            />
            <div
              class="w-fit bg-black/50 border text-accent sm:px-4 px-2 py-2 border-white/10 rounded-xl absolute top-5 sm:-left-25 -left-20 backdrop-blur-2xl animate-float hover:scale-105 transition-all duration-300 ease-in-out cursor-pointer sm:text-base text-sm"
              data-aos="fade-right"
              data-aos-delay="600"
              data-aos-duration="800"
            >
              Frontend Dev
            </div>
            <div
              class="w-fit bg-black/50 border text-accent sm:px-4 px-2 py-2 border-white/10 rounded-xl absolute top-30 sm:-right-30 -right-20 backdrop-blur-2xl animate-float hover:scale-105 transition-all duration-300 ease-in-out cursor-pointer sm:text-base text-sm"
              data-aos="fade-left"
              data-aos-delay="800"
              data-aos-duration="800"
            >
              Jr. Product Designer
            </div>
          </div>
          <h1
            class="sm:text-5xl text-4xl p-2 text-transparent font-recoleta devname bg-clip-text"
            data-aos="fade-up"
            data-aos-delay="300"
            data-aos-duration="1000"
            style="
              background-image: linear-gradient(
                0deg,
                rgb(198, 200, 255) 50%,
                #a098ff 100%
              );
            "
          >
            Ajmal Razaq Bhatti
          </h1>
        </div>
        <div
          class="flex flex-col gap-5 items-center justify-center mt-2"
          data-aos="fade-up"
          data-aos-delay="500"
        >
          <div
            class="flex items-center justify-center gap-2 mt-2 text-accent"
            data-aos="fade-up"
            data-aos-delay="700"
          >
            <a
              href="https://github.com/theajmalrazaq"
              target="_blank"
              rel="noopener noreferrer"
              class="text-white/70 hover:text-accent flex items-center gap-1 bg-white/5 px-2 py-1 rounded-full border border-white/10 glow-s hover:shadow-lg hover:bg-[#a098ff] transition-all duration-400"
              data-aos="flip-up"
              data-aos-delay="800"
              data-aos-duration="600"
            >
              <span>GitHub</span>
            </a>
            /
            <a
              href="https://linkedin.com/in/theajmalrazaq"
              target="_blank"
              rel="noopener noreferrer"
              class="text-white/70 hover:text-accent flex items-center gap-1 bg-white/5 px-2 py-1 rounded-full border border-white/10 glow-s hover:shadow-lg hover:bg-[#a098ff] transition-all duration-400"
              data-aos="flip-up"
              data-aos-delay="900"
              data-aos-duration="600"
            >
              <span>LinkedIn</span>
            </a>
            /
            <a
              href="https://x.com/theajmalrazaq"
              target="_blank"
              rel="noopener noreferrer"
              class="text-white/70 hover:text-accent flex items-center gap-1 bg-white/5 px-2 py-1 rounded-full border border-white/10 glow-s hover:shadow-lg hover:bg-[#a098ff] transition-all duration-400"
              data-aos="flip-up"
              data-aos-delay="1000"
              data-aos-duration="600"
            >
              <span>X</span>
            </a>
            /
            <a
              href="https://behance.net/theajmalrazaq"
              target="_blank"
              rel="noopener noreferrer"
              class="text-white/70 hover:text-accent flex items-center gap-1 bg-white/5 px-2 py-1 rounded-full border border-white/10 glow-s hover:shadow-lg hover:bg-[#a098ff] transition-all duration-400"
              data-aos="flip-up"
              data-aos-delay="1100"
              data-aos-duration="600"
            >
              <span>Behance</span>
            </a>
          </div>
          <p
            class="font-product-sans text-sm text-center sm:w-3/4 text-white/90"
            data-aos="fade-up"
            data-aos-delay="1200"
          >
            Designer? Developer? Why not both. I take ideas from "meh" to "whoa"
            designing sleek interfaces and coding fast, responsive websites that
            actually convert.
          </p>
          <button
            class="bg-gradient-to-r to-black/0 rounded-full py-1 pr-1 pl-4 text-white shadow-accent-animate text-base cursor-pointer hover:shadow-lg transition-all duration-300 ease-in-out hover:to-black/10 hover:scale-105 flex items-center justify-between gap-2"
            data-aos="zoom-in"
            data-aos-delay="1300"
          >
            Let's Talk 
            <div
              class="bg-gradient-to-r to-black/0 p-3 text-white shadow-accent rounded-full flex items-center justify-center"
            >
              <MessageCircle size="18" />
            </div>
          </button>
        </div>
      </div>
    </header>
    <div class="w-full relative mt-8 sm:mt-14">
      <img
        src="/images/eclipse 2.svg"
        alt=""
        class="absolute -top-50 w-full -z-10"
      />
      <div
        class="flex items-center justify-center w-full flex-col gap-3 sm:gap-5 px-4 sm:px-0"
      >
        <div class="relative w-full flex items-center justify-center">
          <img
            src="/images/build.svg"
            alt=""
            class="absolute w-3/5 sm:w-auto"
            data-rotate
            data-speed="0.3"
            data-aos="fade-up"
          />
          <h1
            class="text-white text-2xl sm:text-4xl md:text-5xl -top-2 z-10 absolute font-recoleta text-center"
            data-aos="fade-up"
          >
            Let's <span class="text-accent">build </span> something together.
          </h1>
        </div>
        <div
          class="sm:mt-6 mt-4 z-10 flex flex-col items-center justify-center gap-4 w-full"
        >
          <p
            class="font-product-sans text-sm text-center text-white/90"
            data-aos="fade-up"
          >
            My focus lies in
            <span class="text-accent"
              >UI/UX Design, branding, and web development</span
            >
            <br class="hidden sm:block" />
            No matter the industry, I'd love to talk with you and see how we
            could create <br class="hidden sm:block" />
            something wonderful.
          </p>
          <button
            class="flex gap-2 justify-center items-center text-white/80 cursor-pointer shadow-accent hover:shadow-lg bg-gradient-to-r to-black/0 rounded-full px-6 py-3 text-sm sm:text-base transition-all duration-300 ease-in-out hover:to-black/10 hover:scale-105 scroll-slide-in delayed-animation from-right"
            data-aos="fade-up"
          >
            <Rocket size="18" class="text-accent" />

            Let's Build Together
          </button>
        </div>
      </div>
    </div>
    <div class="w-full flex items-center justify-center mt-10">
      <div
        class="w-[70%] h-[1px] bg-gradient-to-l from-transparent via-[#a098ff]/40 to-transparent z-99"
      ></div>
    </div>
    <!-- Projects Section  -->
    <div
      class="relative mt-40 w-full flex flex-col items-center justify-center gap-5"
    >
      <img
        src="images/projects2.svg"
        alt=""
        class="sm:w-1/2 absolute -top-30 animate-float duration-1000 p-5"
        id="projecticons"
        data-aos="fade-down"
      />
      <div
        class="relative z-10 w-fit p-4 rounded-4xl flex items-center justify-center shadow-accent hover:scale-105 transition-all duration-300 ease-in-out cursor-pointer"
      >
       <Folder size="64" class="text-accent"  />
      </div>

      <div
        class="relative flex flex-col items-center justify-center gap-3 w-full"
      >
        <h1
          class="text-white text-2xl sm:text-4xl md:text-5xl font-recoleta text-center"
          data-aos="fade-up"
        >
          <span class="text-accent">Projects</span> that I've worked on.
        </h1>
        <p
          class="font-product-sans text-sm text-center text-white/90"
          data-aos="fade-up"
        >
          Here's a collection of work where I turned pain points into purposeful
          products through <br />
          <span class="text-accent"
            >careful research, intuitive design, and scalable development.</span
          >
        </p>
      </div>
    </div>
    <footer class="flex justify-center">
      <nav
        class="bg-white/5 text-white rounded-2xl px-7 sm:py-1 py-4 mt-5 backdrop-blur-lg sm:w-fit w-full/2 gap-4 fixed justify-between sm:justify-center items-center z-99 text-normal bottom-5 sm:flex hidden"
      >
        <div>
          <a href="/" class="logo">
            <img
              src="images/logo.svg"
              alt="Ajmal Razaq Bhatti Logo"
              class="logo-image w-10"
              data-rotate
              data-speed="0.2"
            />
          </a>
        </div>

        <div class="sm:hidden flex justify-center items-center">
          <ul class="flex gap-1 sm:gap-3 bg-black/10 p-1 sm:p-2 rounded-full">
            <li>
              <a
                href="https://example.com/page1"
                class="bg-white/5 flex justify-center items-center px-2 py-1 rounded-full hover:bg-white/20 transition-colors"
                >Menu</a
              >
            </li>
          </ul>
        </div>

        <div class="sm:flex justify-center items-center gap-2 sm:gap-4 hidden">
          <div>
            <ul class="flex gap-1 sm:gap-3 bg-black/10 p-1 sm:p-2 rounded-full">
              <li>
                <a
                  href="https://example.com/page1"
                  class="bg-white/5 flex justify-center items-center px-2 sm:px-5 py-1 sm:py-2 rounded-full hover:bg-white/20 transition-colors text-xs sm:text-base"
                  >About</a
                >
              </li>
              <li>
                <a
                  href="https://example.com/page1"
                  class="bg-white/5 flex justify-center items-center px-2 sm:px-5 py-1 sm:py-2 rounded-full hover:bg-white/20 transition-colors text-xs sm:text-base"
                  >Projects</a
                >
              </li>
              <li>
                <a
                  href="https://example.com/page1"
                  class="bg-white/5 flex justify-center items-center px-2 sm:px-5 py-1 sm:py-2 rounded-full hover:bg-white/20 transition-colors text-xs sm:text-base"
                  >Blogs</a
                >
              </li>
              <li>
                <a
                  href="https://example.com/page1"
                  class="bg-[#a098ff] flex justify-center items-center px-2 sm:px-5 py-1 sm:py-2 rounded-full hover:bg-white/20 transition-colors text-xs sm:text-base"
                  >Shorts</a
                >
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </footer>
	<script type="module" src="script.js"></script>
  </body>
</html>