---
import logoimg from "../../public/images/logo.svg";
import { ChevronDown } from "@lucide/astro";
---

<nav
  class="bg-white/5 text-white rounded-2xl px-7 sm:py-1 py-4 mt-3 backdrop-blur-lg w-11/12 gap-2 fixed justify-between items-center z-[999] text-normal top-0 sm:hidden flex"
  data-aos="fade-down"
  data-aos-duration="800"
  role="navigation"
  aria-label="Mobile navigation"
>
  <div>
    <a href="/" class="logo" aria-label="Home">
      <img
        src={logoimg.src}
        alt="Ajmal Razaq Bhatti Logo"
        class="logo-image w-10"
        data-rotate
        data-speed="0.2"
      />
    </a>
  </div>

  <div class="sm:hidden flex justify-center items-center">
    <ul class="flex gap-1 sm:gap-3 bg-black/10 p-1 sm:p-2 rounded-[0px]">
      <li
        class="bg-white/5 flex justify-center items-center px-2 py-1 rounded-[0px] hover:bg-white/20 transition-colors"
        aria-label="Menu"
      >
        Menu
        <ChevronDown
          class="text-white w-4 h-4 sm:w-5 sm:h-5"
          aria-hidden="true"
        />
      </li>
    </ul>
  </div>
</nav>
