---
import logoimg from "../../public/images/logo.svg";
const { page } = Astro.props;

// Helper function to determine if a link is active
const isActive = (path: string) => {
  return page === path;
};
---

<nav
  class="bg-white/5 text-white px-7 rounded-full sm:py-2 py-4 mt-5 backdrop-blur-lg sm:w-fit w-full/2 gap-4 fixed justify-between sm:justify-center items-center tracking-[1px] z-99 font-nixel top-0 sm:flex hidden"
  role="navigation"
  aria-label="Main navigation"
>
  <div>
    <a href="/" class="logo" aria-label="Home">
      <img
        src={logoimg.src}
        alt="Ajmal Razaq Bhatti Logo"
        class="logo-image w-10"
        data-rotate
        data-speed="0.2"
        fetchpriority="high"
        aria-hidden="true"
      />
    </a>
  </div>

  <div class="flex justify-center items-center gap-2 sm:gap-4">
    <div>
      <ul
        class="flex gap-1 sm:gap-3 bg-black/50 backdrop-blur-md border border-white/5 p-1 sm:p-2 rounded-full"
      >
        <li>
          <a
            href="/"
            class={`${isActive("home") ? "bg-accent" : "bg-white/5"} flex justify-center items-center px-2 sm:px-5 py-1 sm:py-2 rounded-full hover:bg-white/20 transition-colors text-lg sm:text-lg`}
            aria-label="About me">home</a
          >
        </li>
        <li>
          <a
            href="/projects"
            class={`${isActive("projects") ? "bg-accent" : "bg-white/5"} flex justify-center items-center px-2 sm:px-5 py-1 sm:py-2 rounded-full hover:bg-white/20 transition-colors text-lg sm:text-lg`}
            aria-label="View my projects">projects</a
          >
        </li>
        <li>
          <a
            href="/blog"
            class={`${isActive("blogs") ? "bg-accent" : "bg-white/5"} flex justify-center items-center px-2 sm:px-5 py-1 sm:py-2 rounded-full hover:bg-white/20 transition-colors text-lg sm:text-lg`}
            aria-label="Read my blog posts">blog</a
          >
        </li>
        <li>
          <a
            href="https://example.com/page1"
            class={`${isActive("about") ? "bg-accent" : "bg-white/5"} flex justify-center items-center px-2 sm:px-5 py-1 sm:py-2 rounded-full hover:bg-white/20 transition-colors text-lg sm:text-lg`}
            aria-label="View my shorts content">about</a
          >
        </li>
      </ul>
    </div>
    <a
      href="https://example.com/page1"
      class="bg-accent flex justify-center items-center px-2 sm:px-5 py-1 sm:py-2 rounded-full hover:bg-white/20 transition-colors text-lg sm:text-lg"
      aria-label="Contact me">let's chat</a
    >
  </div>
</nav>
