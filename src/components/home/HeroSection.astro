---
import { Image } from "astro:assets";
import arrow_right from "../../images/arrow_right.svg";
import star from "../../images/star.svg";
import Heading from "../Heading.astro";
import StarBorder from "../../components/StarBorder.jsx";
import devimg from "../../images/ajmal.webp";
import logowhite from "../../images/logowhite.svg";
---

<header class="relative h-lvh w-full flex justify-center overflow-hidden z-10">
  <!-- Screen reader only heading for accessibility -->
  <h1 class="sr-only">Ajmal Razaq | Design Engineer Portfolio</h1>

  <lottie-player
    src="/animations/logoleft.json"
    background="transparent"
    class="absolute left-1/2 -translate-x-1/2 -top-0 h-1/2 sm:top-10 w-64 sm:w-auto z-10 -rotate-90"
    speed="0.3"
    loop
    autoplay
    data-aos="fade-left"
    aria-hidden="true"
  >
  </lottie-player>

  <!-- Background Pattern -->
  <div
    class="absolute w-full h-full animate-pulse -top-10 inset-0 pointer-events-none"
    aria-hidden="true"
    data-aos="fade"
    role="presentation"
  >
    <Image
      inferSize={true}
      width="1920"
      height="1330"
      src="https://framerusercontent.com/images/2ZTM81mdCXeMIbSWfvdh4X7JIGg.png"
      alt="Decorative background pattern with geometric shapes"
      loading="eager"
      class="w-full h-full object-cover object-center opacity-40 animate-pulse z-0"
    />
  </div>

  <div
    class="flex flex-col items-center justify-center w-full relative z-10 sec"
  >
    <main
      class="flex flex-col gap-2 items-center justify-center mt-4 w-full"
      role="main"
    >
      <section
        class="relative flex items-center justify-center w-full z-[20]"
        data-aos="focus-up"
        aria-label="Developer introduction and skills"
      >
        <div
          class="group cursor-none relative w-[180px] h-[180px]"
          role="img"
          aria-label="Interactive developer avatar - hover to see logo"
        >
          <!-- Front Image -->
          <Image
            src={devimg}
            alt="Ajmal Razaq - Frontend Developer and Product Designer portrait"
            loading="eager"
            class="absolute w-full h-full transition-all duration-700 ease-in-out z-20 opacity-100 group-hover:z-10 group-hover:opacity-0 group-hover:translate-x-5 group-hover:rotate-[15deg] rounded-[50px]"
          />

          <!-- Back Image -->
          <Image
            src={logowhite}
            alt="Ajmal Razaq personal logo"
            loading="eager"
            class="absolute w-full h-full transition-all duration-700 ease-in-out z-10 opacity-0 translate-x-5 rotate-[15deg] group-hover:z-20 group-hover:opacity-100 group-hover:translate-x-0 group-hover:rotate-0"
          />
        </div>

        <div
          class="bg-black/5 border text-accent sm:px-4 px-2 py-2 border-white/10 rounded-xl absolute left-1/2 -translate-x-1/2 top-40 backdrop-blur-md animate-float hover:h transition-all duration-300 flex justify-center items-center ease-in-out cursor-none sm:text-base text-sm z-[999]"
          role="img"
          aria-label="Skill badge: Junior Product Designer"
        >
          <Image
            src={star}
            alt="Star icon indicating skill"
            loading="lazy"
            class="w-4 mr-1 animate-pulse"
          />
          <span aria-hidden="true">Design Engineer</span>
        </div>
      </section>
      <Heading text="ajmal razaq" />
    </main>
    <section
      class="flex flex-col gap-5 items-center"
      aria-label="Social links and contact information"
    >
      <div
        class="flex items-center justify-center gap-2 mt-2 bg-black backdrop-blur-lg p-2 rounded-full text-sm font-product-sans text-accent border border-white/10"
        role="navigation"
        aria-label="Social media links"
        data-aos="focus-up"
        data-aos-delay="800"
      >
        <a
          href="https://github.com/theajmalrazaq"
          target="_blank"
          rel="noopener noreferrer"
          class="text-white/70 0 hover:color-accent flex items-center gap-1 bg-white/5 backdrop-blur-md px-2 py-1 rounded-full glow-s hover:shadow-lg hover:bg-accent transition-all duration-400 cursor-none"
          aria-label="GitHub profile"
        >
          <span>GitHub</span>
        </a>
        /
        <a
          href="https://linkedin.com/in/theajmalrazaq"
          target="_blank"
          rel="noopener noreferrer"
          class="text-white/70 hover:color-accent flex items-center gap-1 bg-white/5 px-2 py-1 backdrop-blur-md rounded-full glow-s hover:shadow-lg hover:bg-accent transition-all duration-400 cursor-none"
          aria-label="LinkedIn profile"
        >
          <span>LinkedIn</span>
        </a>
        /
        <a
          href="https://x.com/theajmalrazaq"
          target="_blank"
          rel="noopener noreferrer"
          class="text-white/70 hover:color-accent flex items-center gap-1 bg-white/5 px-2 py-1 backdrop-blur-md rounded-full glow-s hover:shadow-lg hover:bg-accent transition-all duration-400 cursor-none"
          aria-label="X (Twitter) profile"
        >
          <span>X</span>
        </a>
        /
        <a
          href="https://behance.net/theajmalrazaq"
          target="_blank"
          rel="noopener noreferrer"
          class="text-white/70 hover:color-accent flex items-center gap-1 :bg-white/5 px-2 py-1 backdrop-blur-md rounded-full glow-s hover:shadow-lg hover:bg-accent transition-all duration-400 cursor-none"
          aria-label="Behance portfolio"
        >
          <span>Behance</span>
        </a>
      </div>

      <p
        data-fade="3"
        class="b1 mt-3 text-center"
        data-aos="focus-up"
        aria-label="Professional tagline: Most designers avoid logic. Most devs avoid emotion. I bring both to life."
      >
        <span
          class="text-center transition-colors bg-gradient-to-r from-neutral-300/[35%] via-neutral-300/90 to-neutral-300/[35%] ] bg-clip-text text-transparent font-product-sans"
          >Most designers avoid logic. Most devs avoid emotion. I bring both to
          life.</span
        >
      </p>

      <div
        class="flex items-center justify-center gap-2 relative group"
        data-aos="focus-up"
        role="region"
        aria-label="Contact call-to-action"
      >
        <StarBorder as="button" className="group/button" speed="1s">
          <div class="flex items-center gap-2 cursor-none">
            <a
              href="https://cal.com/theajmalrazaq"
              class="relative h-[50px] w-[160px] pixel-button text-white gap-2 margin-[20px] pl-1 bg-linear-[354deg,#796dff_-28.42%,white_229.8%] flex justify-center items-center rounded-full font-nixel leading-loose text-xl tracking-[1px] cursor-none"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Schedule a chat meeting with Ajmal Razaq via Cal.com"
              >let's chat
              <Image
                src={arrow_right}
                alt="Right arrow indicating external link"
                loading="lazy"
                class="w-4"
              />
            </a>
          </div>
        </StarBorder>
      </div>
    </section>
  </div>
</header>
