      data-aos="focus-up"
      data-aos-delay="100"
      data-aos-duration="800"
      id="collaboration-card"
      tabindex="0"
    >
      <!-- Updated image container to cover entire card -->
      <div
        class="absolute z-0 w-full object-cover opacity-50"
        role="presentation"
        aria-hidden="true"
      >
        <img
          decoding="async"
          loading="lazy"
          class="w-full h-full scale-225"
          src="https://framerusercontent.com/images/2ZTM81mdCXeMIbSWfvdh4X7JIGg.png"
          alt="Decorative geometric pattern background for collaboration card"
        />
