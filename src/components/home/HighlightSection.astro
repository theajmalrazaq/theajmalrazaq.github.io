<section
  class="relative mt-40 w-full sm:px-15 px-6 overflow-hidden"
  id="about-me"
  data-aos="focus-up"
  role="region"
  aria-labelledby="highlight-section-heading"
>
  <!-- Screen reader only heading -->
  <h2 id="highlight-section-heading" class="sr-only">
    Skills and Capabilities Showcase
