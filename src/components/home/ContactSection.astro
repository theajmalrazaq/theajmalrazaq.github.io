---
import { Image } from "astro:assets";
import seeyaa from "../../images/seeyaa.svg";
import { Mail, Copy } from "@lucide/astro";
---

<section
  class="relative mt-40 w-full flex flex-col items-center justify-center px-6 sm:px-15 pb-10"
  id="contact"
  role="region"
  aria-labelledby="contact-heading"
>
  <div
    class="relative z-10 flex flex-col items-center justify-center w-full max-w-4xl"
  >
    <Image
      src={seeyaa}
      class="sm:w-1/2 w-full absolute -top-9"
      data-aos="focus-up"
      alt="Decorative 'See you soon' typography illustration for contact section"
      loading="lazy"
      aria-hidden="true"
    />

    <!-- Two-Column Contact Layout -->
    <div
      class="flex flex-col md:flex-row gap-6 w-full mt-4"
      data-aos="focus-up"
    >
      <!-- Opportunities Card -->
      <div class="w-full">
        <div
          class="rounded-3xl border border-white/10 shadow-accent-soft backdrop-blur-xs p-4 md:p-5 h-full flex flex-col"
        >
          <div class="mb-3">
            <h3
              class="text-white font-nixel text-2xl mb-1 tracking-[1px] md:text-left text-center"
              style="word-spacing: -7px;"
            >
              open for opportunities
            </h3>
            <p
              class="text-white/70 font-product-sans text-xs md:mx-0 mx-auto md:text-left text-center"
            >
              Available for the following work arrangements:
            </p>
          </div>

          <!-- Work Types -->
          <div
            class="flex flex-wrap gap-2 mb-4 md:justify-start justify-center"
          >
            <span
              class="px-3 py-1 bg-accent/10 border border-accent/20 rounded-full text-xs text-white/90 font-product-sans"
            >
              Full-time
            </span>
            <span
              class="px-3 py-1 bg-accent/10 border border-accent/20 rounded-full text-xs text-white/90 font-product-sans"
            >
              Part-time
            </span>
            <span
              class="px-3 py-1 bg-accent/10 border border-accent/20 rounded-full text-xs text-white/90 font-product-sans"
            >
              Contract
            </span>
            <span
              class="px-3 py-1 bg-accent/10 border border-accent/20 rounded-full text-xs text-white/90 font-product-sans"
            >
              Freelance
            </span>
          </div>

          <!-- Email Copy Button -->
          <div class="mt-auto">
            <p
              class="text-white/70 font-product-sans text-xs mb-2 md:text-left text-center"
            >
              Get in touch directly:
            </p>
            <div class="group relative">
              <button
                id="email-copy-btn"
                class="w-full flex items-center justify-between px-4 py-3 border border-white/10 rounded-2xl backdrop-blur-2xl shadow-accent-soft hover:bg-black/70 hover:border-accent/50 transition-all duration-300 ease-in-out cursor-none group"
                aria-label="Copy email address"
              >
                <div class="flex items-center gap-3">
                  <div
                    class="w-8 h-8 rounded-full bg-accent/10 flex items-center justify-center"
                  >
                    <Mail size="20" class="text-accent" />
                  </div>
                  <div class="text-left">
                    <p
                      class="text-white font-product-sans text-base"
                      id="email-text"
                    >
                      hello@theajmalrazaq.tech
                    </p>
                    <p class="text-white/60 text-xs">Click to copy</p>
                  </div>
                </div>
                <div
                  class="w-4 h-4 text-white/60 group-hover:text-accent transition-colors duration-300"
                >
                  <Copy size="16" />
                </div>
              </button>

              <!-- Copy Success Message -->
              <div
                id="copy-success"
                class="absolute -top-10 left-1/2 transform -translate-x-1/2 bg-accent text-black px-2 py-1 rounded-md text-xs font-product-sans opacity-0 transition-opacity duration-300 pointer-events-none"
              >
                Copied to clipboard!
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
