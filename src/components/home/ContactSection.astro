---
import { Image } from "astro:assets";
import seeyaa from "../../images/seeyaa.svg";
import { Mail, Copy } from "@lucide/astro";
---

<section
  class="relative mt-24 sm:mt-40 w-full flex flex-col items-center justify-center px-4 sm:px-15 pb-8 sm:pb-10"
  id="contact"
  role="region"
  data-aos="focus-up"
  aria-labelledby="contact-heading"
>
  <div
    class="relative z-10 flex flex-col items-center justify-center w-full max-w-4xl"
  >
    <Image
      src={seeyaa}
      class="w-full sm:w-2/3 absolute -top-8 sm:-top-11"
      alt="Decorative 'See you soon' typography illustration for contact section"
      loading="lazy"
      aria-hidden="true"
    />

    <!-- Modern Contact Layout -->
    <div class="w-full mt-4 sm:mt-6 space-y-6">
      <!-- Main Contact Card -->
      <div class="group relative">
        <div
          class="relative rounded-2xl sm:rounded-3xl border border-white/10 bg-black/40 backdrop-blur-xl p-4 sm:p-6"
        >
          <!-- Header Section -->
          <div class="text-center mb-4 sm:mb-6">
            <h3
              class="text-white font-nixel text-2xl sm:text-4xl md:text-5xl mb-2 tracking-wide"
              style="word-spacing: -7px; line-height: 1.1;"
            >
              open for opportunities
            </h3>
            <p
              class="text-white/60 font-product-sans text-xs sm:text-sm mb-3 sm:mb-4"
            >
              Ready to collaborate on exciting projects. Let's create something
              amazing together.
            </p>
          </div>

          <!-- Work Types Grid -->
          <div
            class="grid grid-cols-2 sm:flex sm:flex-row flex-wrap justify-center gap-2 sm:gap-3 mb-6 sm:mb-8"
          >
            <div class="group/card relative">
              <div
                class="absolute -inset-0.5 bg-gradient-to-r from-accent/30 to-transparent flex rounded-2xl opacity-0 group-hover/card:opacity-100 transition-opacity duration-300"
              >
              </div>
              <div
                class="relative bg-black/60 border flex justify-center items-center gap-2 sm:gap-3 border-white/10 rounded-xl p-2 sm:p-3 text-center hover:bg-black/80 transition-all duration-300"
              >
                <div
                  class="w-5 h-5 sm:w-6 sm:h-6 bg-accent/10 rounded-full flex items-center justify-center"
                >
                  <div class="w-2 h-2 bg-accent rounded-full"></div>
                </div>
                <span
                  class="text-white/90 font-product-sans text-xs font-medium"
                  >Full-time</span
                >
              </div>
            </div>

            <div class="group/card relative">
              <div
                class="absolute -inset-0.5 bg-gradient-to-r from-accent/30 to-transparent rounded-2xl opacity-0 group-hover/card:opacity-100 transition-opacity duration-300"
              >
              </div>
              <div
                class="relative bg-black/60 border flex justify-center items-center gap-2 sm:gap-3 border-white/10 rounded-xl p-2 sm:p-3 text-center hover:bg-black/80 transition-all duration-300"
              >
                <div
                  class="w-5 h-5 sm:w-6 sm:h-6 bg-accent/10 rounded-full flex items-center justify-center"
                >
                  <div class="w-2 h-2 bg-accent rounded-full"></div>
                </div>
                <span
                  class="text-white/90 font-product-sans text-xs font-medium"
                  >Part-time</span
                >
              </div>
            </div>

            <div class="group/card relative">
              <div
                class="absolute -inset-0.5 bg-gradient-to-r from-accent/30 to-transparent rounded-2xl opacity-0 group-hover/card:opacity-100 transition-opacity duration-300"
              >
              </div>
              <div
                class="relative bg-black/60 border flex justify-center items-center gap-2 sm:gap-3 border-white/10 rounded-xl p-2 sm:p-3 text-center hover:bg-black/80 transition-all duration-300"
              >
                <div
                  class="w-5 h-5 sm:w-6 sm:h-6 bg-accent/10 rounded-full flex items-center justify-center"
                >
                  <div class="w-2 h-2 bg-accent rounded-full"></div>
                </div>
                <span
                  class="text-white/90 font-product-sans text-xs font-medium"
                  >Contract</span
                >
              </div>
            </div>

            <div class="group/card relative">
              <div
                class="absolute -inset-0.5 bg-gradient-to-r from-accent/30 to-transparent rounded-2xl opacity-0 group-hover/card:opacity-100 transition-opacity duration-300"
              >
              </div>
              <div
                class="relative bg-black/60 border flex justify-center items-center gap-2 sm:gap-3 border-white/10 rounded-xl p-2 sm:p-3 text-center hover:bg-black/80 transition-all duration-300"
              >
                <div
                  class="w-5 h-5 sm:w-6 sm:h-6 bg-accent/10 rounded-full flex items-center justify-center"
                >
                  <div class="w-2 h-2 bg-accent rounded-full"></div>
                </div>
                <span
                  class="text-white/90 font-product-sans text-xs font-medium"
                  >Freelance</span
                >
              </div>
            </div>
          </div>

          <!-- Contact CTA -->
          <div class="text-center">
            <p
              class="text-white/60 font-product-sans text-xs sm:text-sm mb-3 sm:mb-4"
            >
              Ready to start a conversation? Get in touch directly:
            </p>

            <!-- Compact Email Button -->
            <div class="max-w-xs sm:max-w-sm mx-auto">
              <button
                id="email-copy-btn"
                class="w-full flex items-center justify-between px-3 sm:px-4 py-2 sm:py-3 border border-white/20 rounded-lg sm:rounded-xl hover:border-accent/50 bg-black/50 backdrop-blur-2xl"
                aria-label="Copy email address"
              >
                <div class="flex items-center gap-2 sm:gap-3">
                  <div
                    class="w-7 h-7 sm:w-8 sm:h-8 rounded-lg bg-gradient-to-br from-accent/20 to-accent/10 flex items-center justify-center"
                  >
                    <Mail size="16" class="text-accent" />
                  </div>
                  <div class="text-left">
                    <p
                      class="text-white font-product-sans text-sm sm:text-base font-medium"
                      id="email-text"
                    >
                      theajmalrazaq@gmail.com
                    </p>
                    <p class="text-white/50 text-xs">Click to copy</p>
                  </div>
                </div>
                <div class="w-4 h-4 sm:w-5 sm:h-5 text-white/40">
                  <Copy size="14" />
                </div>
              </button>

              <!-- Copy Success Message -->
              <div
                id="copy-success"
                class="absolute -top-8 sm:-top-10 left-1/2 transform -translate-x-1/2 bg-accent/90 backdrop-blur-sm text-black px-2 sm:px-3 py-1 rounded-lg text-xs font-product-sans font-medium opacity-0 scale-95 transition-all duration-300 pointer-events-none"
              >
                âœ“ Copied!
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
