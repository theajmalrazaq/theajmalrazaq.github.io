---
import { Image } from "astro:assets";
import buildimg from "../../images/build2.svg";
import eclipseimg from "../../images/eclipse.svg";
import Button from "../Button.astro";
import { User } from "@lucide/astro";
---

<section class="relative w-full mt-12 sm:mt-40" aria-labelledby="about-heading">
  <!-- <Image
    src={eclipseimg}
    alt="Decorative eclipse background pattern"
    loading="lazy"
    class="absolute sm:-top-55 -top-40 w-full -z-10"
    aria-hidden="true"
    role="presentation"
    data-aos="focus-up"
  /> -->
  <div
    class="absolute -top-75 left-1/2 z-0 h-[400px] w-[1200px] -translate-x-1/2 transform"
    style="mask-image: linear-gradient(to right, transparent, black 30%, black 70%, transparent);"
    data-aos="focus-up"
  >
    <div
      class="absolute bottom-[167px] left-1/2 h-[111px] w-[787px] -translate-x-1/2 transform overflow-hidden bg-[radial-gradient(50%_50%_at_50%_50%,#444171_0%,rgba(0,0,0,0)_100%)] blur-[57px]"
      style="transform: translateX(30.1199px);"
    >
    </div><div
      class="absolute right-[-432px] bottom-[-753px] left-[-454px] h-[955px] rounded-[100%] bg-gradient-to-b to-transparent from-[#444171]"
    >
    </div><div
      class="bg-white-1 absolute right-[-510px] bottom-[-759px] left-[-532px] aspect-[2.346820809248555/1] h-[956px] rounded-[100%] shadow-[inset_0_2px_20px_#fff,0_-10px_50px_1px_#ffffff7d] bg-black"
      style="box-shadow: #444171 0px 2px 24.8792px inset, #444171 0px -10px 54.8792px 1px;"
    >
    </div>
  </div>
  <div
    class="flex items-center justify-center w-full flex-col gap-3 sm:gap-5 px-4 sm:px-0"
    data-aos="focus-up"
  >
    <header class="relative w-full flex items-center justify-center">
      <Image
        src={buildimg}
        alt="Decorative build and development illustration"
        loading="lazy"
        class="absolute -top-17 w-3/5 sm:w-auto"
        data-aos="focus-up"
        aria-hidden="true"
        role="presentation"
      />
      <h1
        id="about-heading"
        class="text-white text-3xl sm:text-5xl md:text-7xl z-10 absolute font-nixel tracking-[1px] text-center flex gap-2 flex-wrap justify-center"
        data-aos="focus-up"
      >
        <span>who</span>
        <span>am</span>
        <span class="text-accent">i</span>
        <span>and</span>
        <span>what</span>
        <span class="text-accent">i</span>
        <span class="text-accent">do</span>
      </h1>
    </header>
    <div
      class="sm:mt-6 mt-4 z-10 flex flex-col items-center justify-center gap-4 w-full"
      data-aos="focus-up"
    >
      <p
        class="font-product-sans text-sm text-center text-white/90 max-w-prose mx-auto leading-relaxed w-full sm:w-4/5 md:w-3/4 lg:w-2/3"
        data-aos="focus-up"
      >
        <span
          class="text-center transition-colors bg-gradient-to-r from-neutral-300/[35%] via-neutral-300/90 to-neutral-300/[35%] bg-clip-text text-transparent font-product-sans"
          >I'm Ajmal Razaq — a Design Engineer based in Pakistan.
        </span>
      </p>
      <p
        class="font-product-sans text-sm text-center text-white/90 max-w-prose mx-auto leading-relaxed w-full sm:w-4/5 md:w-3/4 lg:w-2/3"
        data-aos="focus-up"
      >
        <span class="font-semibold text-accent">What do I actually do?</span><br
        />
        I take clunky web experiences and reimagine them into fast, accessible, intuitive
        products. <br />
        Not just sleek UIs — real UX that scales and performs.<br />
      </p>
      <Button
        text="about me"
        data_aos="focus-up"
        data_aos_duration="800"
        aria_label="Learn more about Ajmal Razaq's background and experience"
      >
        <User size="18" aria-hidden="true" />
      </Button>
    </div>
  </div>
</section>
