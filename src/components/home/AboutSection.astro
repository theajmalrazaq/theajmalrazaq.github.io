---
import { Image } from "astro:assets";
import buildimg from "../../images/build2.svg";
import Button from "../Button.astro";
import { User } from "@lucide/astro";
---

<section
  class="relative mt-12 sm:mt-40 w-full p-5"
  aria-labelledby="about-heading"
>
  <div
    class="absolute left-1/2 sm:top-120 top-10 -translate-x-1/2 -translate-y-1/2 z-0"
  >
    <div
      class="rounded-full sm:w-[1340px] sm:h-[1340px] w-[345px] h-[345px] pointer-events-none"
      style="
      background:rgba(0,0,0,0.01);
      box-shadow:2px 0 100px -44px #A098FF inset;
      mask-image:linear-gradient(to bottom,black 38%,rgba(0,0,0,0.7) 42%,transparent 50%);
      -webkit-mask-image:linear-gradient(to bottom,black 38%,rgba(0,0,0,0.7) 42%,transparent 50%);
    "
    >
    </div>
  </div>
  <div
    class="flex items-center justify-center w-full flex-col gap-3 sm:gap-5 px-4 sm:px-0"
    data-aos="focus-up"
  >
    <header class="relative w-full flex items-center justify-center">
      <Image
        src={buildimg}
        alt="Decorative build and development illustration"
        loading="lazy"
        class="absolute -top-17 w-3/5 sm:w-auto"
        data-aos="focus-up"
        aria-hidden="true"
        role="presentation"
      />
      <h1
        id="about-heading"
        class="text-white text-3xl sm:text-5xl md:text-7xl z-10 absolute font-nixel tracking-[1px] text-center flex gap-2 flex-wrap justify-center"
        data-aos="focus-up"
      >
        <span>who</span>
        <span>am</span>
        <span class="text-accent">i</span>
        <span>and</span>
        <span>what</span>
        <span class="text-accent">i</span>
        <span class="text-accent">do</span>
      </h1>
    </header>
    <div
      class="sm:mt-6 mt-4 z-10 flex flex-col items-center justify-center gap-4 w-full"
      data-aos="focus-up"
    >
      <p
        class="font-product-sans text-sm text-center text-white/90 max-w-prose mx-auto leading-relaxed w-full sm:w-4/5 md:w-3/4 lg:w-2/3"
        data-aos="focus-up"
      >
        <span
          class="text-center transition-colors bg-gradient-to-r from-neutral-300/[35%] via-neutral-300/90 to-neutral-300/[35%] bg-clip-text text-transparent font-product-sans"
          >I'm Ajmal Razaq — a Design Engineer based in Pakistan.
        </span>
      </p>
      <p
        class="font-product-sans text-sm text-center text-white/90 max-w-prose mx-auto leading-relaxed w-full sm:w-4/5 md:w-3/4 lg:w-2/3"
        data-aos="focus-up"
      >
        <span class="font-semibold text-accent">What do I actually do?</span><br
        />
        I take clunky web experiences and reimagine them into fast, accessible, intuitive
        products. <br />
        Not just sleek UIs — real UX that scales and performs.<br />
      </p>
      <Button
        text="about me"
        data_aos="focus-up"
        data_aos_duration="800"
        aria_label="Learn more about Ajmal Razaq's background and experience"
      >
        <User size="18" aria-hidden="true" />
      </Button>
    </div>
  </div>
</section>
