---
import { Image } from "astro:assets";
import logo from "../images/logo.svg";
---

<footer
  class="relative w-full bg-black/50 border-t border-white/10 backdrop-blur-xl"
  role="contentinfo"
  data-aos="focus-up"
>
  <div class="w-full max-w-6xl mx-auto px-6 sm:px-15 py-12">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
      <!-- Brand Section -->
      <div class="md:col-span-2">
        <div class="flex items-center gap-3 mb-4">
          <Image
            src={logo}
            alt="Ajmal Razaq logo"
            loading="lazy"
            class="w-8 h-8"
          />
          <span
            class="text-white font-nixel text-3xl tracking-[1px]"
            style="word-spacing:-7px;">ajmal razaq</span
          >
        </div>
        <p
          class="text-white/70 font-product-sans text-sm max-w-md leading-relaxed"
        >
          Frontend Developer & Junior Product Designer crafting exceptional
          digital experiences with a focus on performance, accessibility, and
          user-centered design.
        </p>

        <!-- Availability Status -->
        <div class="flex items-center justify-start mt-4">
          <div
            class="px-3 py-2 border border-white/10 flex items-center justify-center rounded-lg backdrop-blur-2xl bg-black/40 text-white/80 transition-all duration-300 ease-in-out"
          >
            <div
              class="relative mr-2 flex h-3 w-3 items-center justify-center"
              aria-hidden="true"
            >
              <div class="h-2 w-2 rounded-full bg-green-500 glow-sm"></div>
              <div
                class="absolute h-full w-full animate-ping rounded-full bg-green-500 opacity-60"
              >
              </div>
            </div>
            <p class="text-xs font-product-sans tracking-[0.2px]">
              Open to New Opportunities
            </p>
          </div>
        </div>
      </div>

      <div class="flex justify-between items-start md:col-span-2">
        <!-- Quick Links -->
        <div>
          <h3 class="text-white font-nixel text-2xl tracking-[1px]">
            quick links
          </h3>
          <ul class="space-y-2">
            <li>
              <a
                href="#about-me"
                class="text-white/70 hover:text-accent transition-colors duration-300 font-product-sans text-sm cursor-none"
                >About</a
              >
            </li>
            <li>
              <a
                href="#projects"
                class="text-white/70 hover:text-accent transition-colors duration-300 font-product-sans text-sm cursor-none"
                >Projects</a
              >
            </li>
            <li>
              <a
                href="/blog"
                class="text-white/70 hover:text-accent transition-colors duration-300 font-product-sans text-sm cursor-none"
                >Blog</a
              >
            </li>
            <li>
              <a
                href="#contact"
                class="text-white/70 hover:text-accent transition-colors duration-300 font-product-sans text-sm cursor-none"
                >Contact</a
              >
            </li>
          </ul>
        </div>

        <!-- Social Links -->
        <div>
          <h3 class="text-white font-nixel text-2xl tracking-[1px]">connect</h3>
          <ul class="space-y-2">
            <li>
              <a
                href="https://github.com/theajmalrazaq"
                target="_blank"
                rel="noopener noreferrer"
                class="text-white/70 hover:text-accent transition-colors duration-300 font-product-sans text-sm cursor-none"
                >GitHub</a
              >
            </li>
            <li>
              <a
                href="https://linkedin.com/in/theajmalrazaq"
                target="_blank"
                rel="noopener noreferrer"
                class="text-white/70 hover:text-accent transition-colors duration-300 font-product-sans text-sm cursor-none"
                >LinkedIn</a
              >
            </li>
            <li>
              <a
                href="https://x.com/theajmalrazaq"
                target="_blank"
                rel="noopener noreferrer"
                class="text-white/70 hover:text-accent transition-colors duration-300 font-product-sans text-sm cursor-none"
                >X (Twitter)</a
              >
            </li>
            <li>
              <a
                href="https://behance.net/theajmalrazaq"
                target="_blank"
                rel="noopener noreferrer"
                class="text-white/70 hover:text-accent transition-colors duration-300 font-product-sans text-sm cursor-none"
                >Behance</a
              >
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div
      class="border-t border-white/10 pt-8 flex flex-col md:flex-row justify-between items-center gap-4"
    >
      <p
        class="text-white/60 font-product-sans text-sm text-center md:text-left"
      >
        Â© 2024 Ajmal Razaq . All rights reserved.
      </p>
      <div class="flex items-center gap-6">
        <a
          href="/privacy"
          class="text-white/60 hover:text-white transition-colors duration-300 font-product-sans text-sm cursor-none"
          >Privacy Policy</a
        >
        <a
          href="/terms"
          class="text-white/60 hover:text-white transition-colors duration-300 font-product-sans text-sm cursor-none"
          >Terms</a
        >
      </div>
    </div>
  </div>
</footer>
