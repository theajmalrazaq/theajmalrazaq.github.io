---
import { MessageCircle, Code, Palette, Clock, Layers } from "@lucide/astro";
import Button from "./Button.astro";
---

<div class="relative">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
    <!-- Card 1: Collaboration -->
    <div
      class="shadow-accent-soft card relative overflow-hidden rounded-3xl border border-white/10 p-6 sm:p-8 col-span-1 row-span-1 pixel-card backdrop-blur-md group"
      data-aos="focus-up"
      data-aos-delay="100"
      data-aos-duration="800"
      id="collaboration-card"
      tabindex="0"
    >
      <!-- Updated image container to cover entire card -->
      <div class="absolute z-0 w-full object-cover opacity-50">
        <img
          decoding="async"
          loading="lazy"
          class="w-full h-full scale-225"
          src="https://framerusercontent.com/images/2ZTM81mdCXeMIbSWfvdh4X7JIGg.png"
          alt="Collaboration background"
        />
      </div>

      <!-- Button overlay that appears on hover -->
      <div
        class="absolute inset-0 bg-black/60 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-20"
      >
        <Button text="let's chat" aria_label="Contact me">
          <MessageCircle size="18" />
        </Button>
      </div>

      <div
        class="h-full flex flex-col relative z-10 group-hover:opacity-0 transition-opacity duration-300"
      >
        <div
          class="flex items-start gap-4 mb-4"
          data-aos="focus-up"
          data-aos-delay="200"
          data-aos-duration="1000"
        >
          <div
            class="p-3 rounded-3xl transition-all duration-300 collaboration-icon shadow-accent border border-white/10"
          >
            <MessageCircle size="24" class="text-white/70" />
          </div>
        </div>

        <h3
          class="sm:text-4xl text-3xl text-transparent font-nixel bg-clip-text mb-2 tracking-[1px]"
          data-aos="focus-up"
          data-aos-delay="300"
          data-aos-duration="2000"
          style="background-image: linear-gradient(0deg, rgb(198, 200, 255) 50%, #a098ff 100%);word-spacing: -7px;"
        >
          collaboration
        </h3>
        <p
          class="text-sm text-white/70 font-product-sans mb-3"
          data-aos="focus-up"
          data-aos-delay="400"
          data-aos-duration="1000"
        >
          I prioritize client collaboration, fostering open communication
        </p>

        <div class="flex flex-col gap-2 mt-auto">
          <div
            class="flex justify-between items-center"
            data-aos="focus-up"
            data-aos-delay="500"
            data-aos-duration="1000"
          >
            <span class="text-xs text-white/50">Communication</span>
            <div class="flex">
              <span class="text-accent">★</span>
              <span class="text-accent">★</span>
              <span class="text-accent">★</span>
              <span class="text-accent">★</span>
              <span class="text-accent">★</span>
            </div>
          </div>

          <div class="flex justify-between items-center">
            <div
              class="flex -space-x-2 hover:space-x-1 transition-all duration-300 cursor-none"
              id="team-members"
              data-aos="focus-up"
              data-aos-delay="600"
              data-aos-duration="1000"
            >
              <div
                class="w-8 h-8 rounded-full border-2 border-[#121212] bg-[#a098ff]/20 overflow-hidden hover:scale-110 transition-all duration-300"
              >
                <img
                  src="https://randomuser.me/api/portraits/men/32.jpg"
                  alt="Team member"
                  class="w-full h-full object-cover"
