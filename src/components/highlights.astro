<div class="relative">
   
   <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
        
        <!-- Card 1: Collaboration -->
        <div class="shadow-accent-soft card relative overflow-hidden rounded-3xl border border-white/10 p-6 sm:p-8 col-span-1 row-span-1 pixel-card backdrop-blur-md group"
          data-aos="fade-up"
          data-aos-delay="100"
          data-aos-duration="800"
          id="collaboration-card"
          tabindex="0">

          <!-- Updated image container to cover entire card -->
